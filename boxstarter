# Allow reboots when needed
#$Boxstarter.RebootOk=$true

# Configure Windows
Set-WindowsExplorerOptions -EnableShowHiddenFilesFoldersDrives -EnableShowProtectedOSFiles -EnableShowFileExtensions -EnableShowFullPathInTitleBar

Update-ExecutionPolicy Unrestricted

cinst -y Microsoft-Hyper-V-All -source windowsFeatures

# Packages
choco install cmder -pre
choco install Gow

## Git
choco install git.install
choco install poshgit
choco install git-credential-manager-for-windows 

## Node, npm
choco install nodejs.install -version 4.5.0
cmd /c "refreshenv && npm install -g npm-windows-upgrade"
cmd /c "refreshenv && npm install -g npm@3.5.0"
cmd /c "refreshenv && npm install -g --production windows-build-tools"

## Java
choco install jdk8

## Editors
choco install intellijidea-community
choco install notepadplusplus.install
choco install sublimetext3

## SQL
choco install dbeaver

## Notes
choco install evernote

## Skype
choco install skype

## Ruby, Go, Python
choco install ruby
choco install ruby.devkit

choco install golang

choco install python2
choco install pip

if (Test-PendingReboot) { Invoke-Reboot }

#mRemoteNG
choco install mremoteng -version 1.74.6023.15437

## Basics
choco install vlc
choco install GoogleChrome
choco install firefox
choco install 7zip.install
choco install sysinternals
choco install DotNet3.5
choco install procexp
choco install procmon
choco install tcpview
choco install xming

if (Test-PendingReboot) { Invoke-Reboot }

# Pinning Things
#Install-ChocolateyPinnedTaskBarItem "$env:programfiles\Google\Chrome\Application\chrome.exe"
#Install-ChocolateyPinnedTaskBarItem "$env:tools\Cmder.exe"

# Window's Updates, too
Install-WindowsUpdate -acceptEula
